{{#partial "contenido"}}
	<form method="post" action="/usuario">
		<div class="form-group">
			<label>Nombre</label>
			{{#if usuario}}
				<input type="string" name="nombre" class="form-control" value={{usuario.nombre}}>
			{{else}}
				<input type="string" name="nombre" class="form-control">
			{{/if}}
		</div>
		<div class="form-group">
			<label>Apellido</label>
			{{#if usuario}}
				<input type="string" name="apellido" class="form-control" value={{usuario.apellido}}>
			{{else}}
				<input type="string" name="apellido" class="form-control">
			{{/if}}
		</div>
		<div class="form-group">
			<label>Nombre de usuario</label>
			{{#if usuario}}
				<input type="string" name="nombreDeUsuario" class="form-control" value={{usuario.nombreDeUsuario}} disabled>
			{{else}}
				<input type="string" name="nombreDeUsuario" class="form-control">
			{{/if}}
			
		</div>
		<button type="submit" class="btn btn-primary">Guardar</button>
	</form>
<br><br>
<div>
	<a href="/usuarios"><button type="button" class="btn btn-primary">Volver</button></a>
</div>
{{/partial}}
{{>pagina.hbs}}